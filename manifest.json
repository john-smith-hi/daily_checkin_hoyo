{
  "manifest_version": 3,
  "name": "Daily Check-in Hoyo",
  "version": "1.0",
  "description": "A Chrome extension for daily check-in Hoyoverse",
  "permissions": [
    "storage",
    "cookies",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Daily Check-in Hoyo"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}